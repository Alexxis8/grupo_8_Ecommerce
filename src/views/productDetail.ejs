<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs') %>
    <body>
      <%- include('partials/header.ejs') %>
        <main>
            <section>
                <div class="contenedor-producto">
                    <div class="img-caja"><img id="img-detalle" src="<%= product.imagen %>" alt=""></div>
                    <div class="caja-detalle">
                            <h2 id="titulo-detalle"><%= product.marca %></h2>
                            <h4 id="subtitulo-detalle"><%= product.modelo %></h4>
                            <h5 id="subtitulo-detalle"><%= product.cilindrada %>cc</h5>
                            <p><%= product.descripcion %>
                            </p>
                            <p class="colores-producto">Colores disponibles
                                <span class="color-detalle" id="negro"></span>
                                <span class="color-detalle" id="azul"></span>
                                <span class="color-detalle" id="rojo"></span>
                            </p>
                            <h5 class="precio-detalle"><%= product.precio %></h5>
                            <div class="caja-btn-detalle"> 
                                <button class="btn agregar">AGREGAR</button>
                                <button class="btn comprar" type="submit">COMPRAR</button>
                                </div>
                                <div>
                                    <a href="/edit/<%= product.id %>">Editar</a>
                                </div>
                                <div>
                                    <a href="/delete/<%= product.id %>">Eliminar</a>
                                </div>
                                <div>
                                    <a href="/restore/<%= product.id %>">Restaurar</a>
                                </div>
                    </div>
                </div>
            </section>
        </main>
        <%- include('partials/footer.ejs') %>
    </body>
</html>